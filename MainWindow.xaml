<Window x:Class="Chinesechess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chinese Chess"
        Height="750"
        Width="600"
        Background="#f4d793">
    <DockPanel>
        <Border DockPanel.Dock="Top"
                Background="#333"
                Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="StatusLabel"
                           Text="Red"
                           Foreground="White"
                           FontSize="18"
                           VerticalAlignment="Center"
                           Margin="10,0"/>
                <Button Content="Undo"
                        Click="Undo_Click"
                        Margin="20,0,0,0"
                        Padding="15,5"
                        Cursor="Hand"/>
            </StackPanel>
        </Border>

        <Grid Margin="40"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">

            <Canvas x:Name="BoardCanvas"
                    Width="420"
                    Height="470"
                    Panel.ZIndex="0"/>

            <UniformGrid x:Name="ChessGrid"
                         Rows="10"
                         Columns="9"
                         Width="450"
                         Height="500"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Margin="-25,-25,0,0"
                         Background="Transparent"
                         Panel.ZIndex="1"/>
        </Grid>

    </DockPanel>
</Window>